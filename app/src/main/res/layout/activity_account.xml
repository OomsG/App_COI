<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.AccountActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:id="@+id/infoAccount" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_horizontal">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoUsername">
            <TextView
                    android:text="Username"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvUsername"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Username"
                    android:ems="10"
                    android:id="@+id/etUsername"
                    android:enabled="false" android:editable="false" android:clickable="false"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoEmail">
            <TextView
                    android:text="Email"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvEmail"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Email"
                    android:ems="10"
                    android:id="@+id/etEmail"
                    android:enabled="false" android:editable="false" android:clickable="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoSurname">
            <TextView
                    android:text="Voornaam"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSurname"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/etSurname"
                    android:editable="true" android:enabled="true"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoLastName">
            <TextView
                    android:text="Achternaam"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvLastName"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/etLastName"
                    android:editable="true" android:enabled="true"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoSex">
            <TextView
                    android:text="Geslacht"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSex"/>
            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/spinSex"
                    android:spinnerMode="dropdown" android:entries="@array/spinSexItems"
                    android:dropDownWidth="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoAge">
            <TextView
                    android:text="Leeftijd"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAge"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/etAge" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoZipCode">
            <TextView
                    android:text="Postcode"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvZipCode"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPostalAddress"
                    android:ems="10"
                    android:id="@+id/etZipCode" android:layout_weight="1"/>
        </LinearLayout>
        <Button
                android:text="Opslaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnSaveAccountInfo"
                android:gravity="center|center_horizontal" android:backgroundTint="#027CFF"
                android:textColor="@color/com_facebook_button_background_color_focused"
                style="@style/Widget.AppCompat.Button.Colored"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>