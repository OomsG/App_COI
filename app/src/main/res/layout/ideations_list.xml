<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Titel van het project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TitleIdeation"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="Hier komt een korte omschrijving van van wat er verwacht wordt van het project "
                android:layout_width="227dp"
                android:layout_height="66dp"
                android:id="@+id/SmallDescriptionIdeation"
                app:layout_constraintTop_toBottomOf="@+id/TitleIdeation"
                android:gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        <Button
                android:text="Bekijk Idee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/giveIdea"
                android:gravity="center"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/SmallDescriptionIdeation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:text="5 IdeeÃ«n"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/IdeationIdeaCount"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@+id/IdeationVoteCount"
                app:layout_constraintRight_toLeftOf="@+id/IdeationVoteCount"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="50 stemmen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/IdeationVoteCount"
                android:gravity="center_horizontal"
                app:layout_constraintRight_toLeftOf="@+id/IdeationShareCount"
                app:layout_constraintLeft_toRightOf="@+id/IdeationIdeaCount"
                app:layout_constraintTop_toBottomOf="@+id/giveIdea"

        />
        <TextView
                android:text="10 keer gedeeld"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/IdeationShareCount"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@id/IdeationVoteCount"
                app:layout_constraintTop_toTopOf="@id/IdeationVoteCount"
        />
        <Button
                android:text="stem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/IdeationVote"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/IdeationVoteCount"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/IdeationShare"
        />
        <Button
                android:text="Share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/IdeationShare"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@+id/IdeationVote"
                app:layout_constraintLeft_toRightOf="@id/IdeationVote"
                app:layout_constraintRight_toRightOf="parent"
        />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>