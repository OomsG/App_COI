<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ShareVoteActivity">

    <Button
            android:id="@+id/fbShare"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Deel op Facebook"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/twShare"

    />
    <Button
            android:id="@+id/twShare"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Deel op Twitter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/fbShare"/>

</android.support.constraint.ConstraintLayout>