<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SearchResultsActivity">

    <TextView
            android:text="@string/search_results_for"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tvSearchString"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center" app:layout_constraintBottom_toTopOf="@+id/layoutProjects"
            android:textStyle="bold"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@id/tvSearchString"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/layoutProjects">

        <TextView
                android:text="@string/search_projects"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tvSearchedProjects"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintBottom_toTopOf="@+id/listSearchedProjects" android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:textAlignment="center"/>

        <GridView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listSearchedProjects"
                android:numColumns="3"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@id/tvSearchedProjects"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_weight="1" android:maxHeight="150dp"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@id/layoutProjects"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/layoutIdeations">

        <TextView
                android:text="@string/search_ideations"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tvSearchedIdeations"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toTopOf="@+id/listSearchedIdeations" android:textAllCaps="false"
                android:textAlignment="center"/>

        <GridView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listSearchedIdeations"
                android:numColumns="1"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@id/tvSearchedIdeations"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_weight="1" android:maxHeight="150dp"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@id/layoutIdeations"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/layoutIdeas">

        <TextView
                android:text="@string/search_ideas"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tvSearchedIdeas"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toTopOf="@+id/listSearchedIdeas" android:layout_marginBottom="8dp"
                android:textAlignment="center"/>
        <GridView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listSearchedIdeas"
                android:numColumns="3"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@id/tvSearchedIdeas"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_weight="1" android:maxHeight="150dp"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@id/layoutIdeas"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/layoutReactions">

        <TextView
                android:text="@string/search_reactions"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tvSearchedReactions"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/listSearchedReactions" android:textAlignment="center"/>
        <GridView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listSearchedReactions"
                android:numColumns="1"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@id/tvSearchedReactions"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_weight="1" android:maxHeight="150dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>