<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:text="@string/vraag_1_15"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/QuestionNr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/QuestionText"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/dummy_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/QuestionText"
            app:layout_constraintStart_toEndOf="@+id/QuestionNr"
            app:layout_constraintTop_toTopOf="@+id/QuestionNr"
            app:layout_constraintRight_toRightOf="parent"


    />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/LinearLayoutQuestion"
            app:layout_constraintTop_toBottomOf="@id/QuestionText" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/QuestionText" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp">
    </LinearLayout>
</android.support.constraint.ConstraintLayout>