<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SurveyActivity">


    <include
            layout="@layout/toolbar_layout" android:id="@+id/SurveyInclude"/>

    <fragment
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:name="be.kdg.cityofideas.fragments.SurveyFragment"
            android:id="@+id/SurveyFragment"
            tools:layout="@layout/fragment_survey"
            app:layout_constraintTop_toBottomOf="@+id/SurveyInclude"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>