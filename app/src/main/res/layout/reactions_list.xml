<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">


    <TextView
            android:text="Titel van het project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NameReaction"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/TextReaction"
            app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="Hier komt een korte omschrijving van van wat er verwacht wordt van het project "
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:id="@+id/TextReaction"
            app:layout_constraintTop_toBottomOf="@+id/NameReaction"
            app:layout_constraintLeft_toRightOf="@id/NameReaction"
            app:layout_constraintRight_toRightOf="parent"
    />

</android.support.constraint.ConstraintLayout>